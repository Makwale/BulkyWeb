@model Bulky.Models.Category

<h3>Delete Category</h3>
<form method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Enter category name">
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="form-label"></label>
        <input asp-for="DisplayOrder" type="number" class="form-control" id="displayOrder" placeholder="Enter display order">
    </div>
    <div class="float-end">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-plus-circle-fill"></i>
            Delete
        </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x"></i>
            Cancel
        </a>
    </div>

</form>
