@model List<Bulky.Models.Product>

<h3>Product List</h3>

<div class="float-end">
    <a asp-action="CreateProduct" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill"></i>
        Create new product
    </a>
</div>
<partial name="_Notification" />
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Author</th>
            <th scope="col">ISBN</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>
                    @product.Title
                </td>
                <td>
                    @product.Description
                </td>
                <td>
                    @product.Author
                </td>
                <td>
                    @product.ISBN
                </td>
                <td>
                    @product.Category.Name
                </td>
                <td>
                    @product.Price
                </td>

                <td>
                    <a asp-action="UpdateProduct" asp-route-id="@product.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil"></i>
                        Edit
                    </a>
                    <a asp-action="" asp-route-id="@product.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-x-circle-fill"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
