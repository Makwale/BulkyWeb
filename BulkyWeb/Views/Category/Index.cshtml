@model List<Bulky.Models.Category>

 <h3>Category List</h3>

<div class="float-end">
    <a  asp-action="CreateCategory" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill"></i>
        Create new category
    </a>
 </div>
<partial name="_Notification" />
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Id</td>
                <td>
                    @cat.Name</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@cat.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil"></i>
                        Edit
                    </a>
                    <a asp-action="DeleteCategory" asp-route-id="@cat.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-x-circle-fill"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
        
    </tbody>
</table>