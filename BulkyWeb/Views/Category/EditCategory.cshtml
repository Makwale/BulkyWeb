@model Bulky.Models.Category

<h3>Edit Category</h3>
<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Enter category name">
        <span asp-validation-for="Name" class="text-danger" ></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="form-label"></label>
        <input asp-for="DisplayOrder" type="number" class="form-control" id="displayOrder" placeholder="Enter display order">
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="float-end">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i>
            Update
        </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x"></i>
            Cancel
        </a>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
